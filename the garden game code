    reality: { name: 'Reality Pack', emoji: 'üîÆ', cost: 1500000, seeds: ['reality_apple', 'dimension_grape', 'void_berry'], rarity: 'reality' },
    transcendent: { name: 'Transcendent Pack', emoji: '‚ú®', cost: 2500000, seeds: ['transcendent_fruit', 'omnipotent_berry', 'absolute_citrus'], rarity: 'transcendent' },
    ultimate: { name: 'Ultimate Pack', emoji: 'üëë', cost: 5000000, seeds: ['ultimate_fruit', 'supreme_berry', 'perfect_citrus'], rarity: 'ultimate' },
    
    // NEW 50 SEED PACKS!
    ocean: { name: 'Ocean Pack', emoji: 'üåä', cost: 10000000, seeds: ['coral_fruit', 'seaweed_berry', 'pearl_citrus'], rarity: 'ocean' },
